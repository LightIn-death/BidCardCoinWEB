{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>NomAuteur</th>
                <td>{{ produit.NomAuteur }}</td>
            </tr>
            <tr>
                <th>NomStyle</th>
                <td>{{ produit.NomStyle }}</td>
            </tr>
            <tr>
                <th>PrixReserve</th>
                <td>{{ produit.PrixReserve }}</td>
            </tr>
            <tr>
                <th>ReferenceCatalogue</th>
                <td>{{ produit.ReferenceCatalogue }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.Description }}</td>
            </tr>
            <tr>
                <th>IsSend</th>
