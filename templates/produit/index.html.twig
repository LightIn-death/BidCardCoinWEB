{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomAuteur</th>
                <th>NomStyle</th>
                <th>PrixReserve</th>
                <th>ReferenceCatalogue</th>
                <th>Description</th>
                <th>IsSend</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.NomAuteur }}</td>
                <td>{{ produit.NomStyle }}</td>
                <td>{{ produit.PrixReserve }}</td>
                <td>{{ produit.ReferenceCatalogue }}</td>
                <td>{{ produit.Description }}</td>
                <td>{{ produit.IsSend ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
